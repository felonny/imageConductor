<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context="com.example.image.MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美图" 
        android:textSize="40dp"
        android:layout_marginBottom="40dp"/>

    <Button
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PrimaryColor" 
        android:onClick="btnPrimaryColor"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btnColorMatrix" 
        android:onClick="btnColorMatrix"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PixelsEffect" 
        android:onClick="PixelsEffect"/>

</LinearLayout>
